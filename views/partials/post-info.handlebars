<article class="post">
    <header class="post-header">
        <h2>{{title}}</h2>
        <div class="post-meta">
            <span>Posted by {{author}} on <time datetime="{{formatDate createdAt}}">{{formatDate createdAt}}</time></span>
        </div>
    </header>
    <section class="post-content">
        <p>{{content}}</p>
    </section>
    {{#if ownPost}}
        <footer class="post-footer">
            <a href="/posts/{{id}}/edit" class="button edit-button">Edit</a>
            <button type="button" class="button delete-button" data-id="{{id}}">Delete</button>
        </footer>
    {{/if}}
</article>
