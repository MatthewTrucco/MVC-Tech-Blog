<h1>Edit Post</h1>

{{#if post}}
    {{#with post}}
        <form id="edit-post-form" action="/posts/update/{{id}}" method="POST">
            <input type="hidden" name="id" value="{{id}}">

            <div class="form-group">
                <label for="post-title">Title</label>
                <input type="text" id="post-title" name="title" placeholder="Enter post title" value="{{title}}" required>
            </div>

            <div class="form-group">
                <label for="post-content">Content</label>
                <textarea id="post-content" name="content" rows="10" placeholder="Write your post content here..." required>{{content}}</textarea>
            </div>

            <button type="submit" class="btn">Update Post</button>
        </form>
    {{/with}}
{{else}}
    <p>Post not found.</p>
{{/if}}
